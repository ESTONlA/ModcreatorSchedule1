<Window x:Class="Schedule1ModdingTool.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Schedule1ModdingTool.Views"
        mc:Ignorable="d"
        Title="{Binding CurrentProject.DisplayTitle, StringFormat='Schedule 1 Modding Tool - {0}'}"
        Height="800" Width="1200"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="SplitterStyle" TargetType="GridSplitter">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <MenuItem Header="_File">
                <MenuItem Header="_New Project" Command="{Binding NewProjectCommand}" InputGestureText="Ctrl+N">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ“„" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Open Project..." Command="{Binding OpenProjectCommand}" InputGestureText="Ctrl+O">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ“‚" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Save Project" Command="{Binding SaveProjectCommand}" InputGestureText="Ctrl+S">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ’¾" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Save Project _As..." Command="{Binding SaveProjectAsCommand}" InputGestureText="Ctrl+Shift+S">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ’¾" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="E_xit" Command="{Binding ExitCommand}" InputGestureText="Alt+F4">
                    <MenuItem.Icon>
                        <TextBlock Text="âŒ" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Quest">
                <MenuItem Header="_Add Quest" Command="{Binding AddQuestCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="âž•" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Remove Quest" Command="{Binding RemoveQuestCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="âž–" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Regenerate Code" Command="{Binding RegenerateCodeCommand}" InputGestureText="F5">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ”„" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Generate Mod" Command="{Binding CompileCommand}" InputGestureText="F6">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ“¦" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="Toggle _Code View" Command="{Binding ToggleCodeViewCommand}" IsCheckable="True" IsChecked="{Binding IsCodeVisible}">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ‘ï¸" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <ToolBar Grid.Row="1" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Button Command="{Binding NewProjectCommand}" ToolTip="New Project">
                <TextBlock Text="ðŸ“„" FontSize="16"/>
            </Button>
            <Button Command="{Binding OpenProjectCommand}" ToolTip="Open Project">
                <TextBlock Text="ðŸ“‚" FontSize="16"/>
            </Button>
            <Button Command="{Binding SaveProjectCommand}" ToolTip="Save Project">
                <TextBlock Text="ðŸ’¾" FontSize="16"/>
            </Button>
            <Separator/>
            <Button Command="{Binding AddQuestCommand}" ToolTip="Add Quest">
                <TextBlock Text="âž•" FontSize="16"/>
            </Button>
            <Button Command="{Binding RemoveQuestCommand}" ToolTip="Remove Quest">
                <TextBlock Text="âž–" FontSize="16"/>
            </Button>
            <Separator/>
            <Button Command="{Binding RegenerateCodeCommand}" ToolTip="Regenerate Code (F5)">
                <TextBlock Text="ðŸ”„" FontSize="16"/>
            </Button>
            <Button Command="{Binding CompileCommand}" ToolTip="Generate MelonLoader Mod (F6)">
                <TextBlock Text="ðŸ“¦" FontSize="16"/>
            </Button>
        </ToolBar>

        <!-- Main Content Grid -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" MinWidth="250"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <!-- Resource Explorer Panel -->
            <Border Grid.Column="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Margin="2">
                <DockPanel>
                    <TextBlock Text="Resource Explorer" FontSize="14" FontWeight="SemiBold" Foreground="#424242" Margin="8,8,8,4" DockPanel.Dock="Top"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="8">
                            <TextBlock Text="Blueprints" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <ItemsControl ItemsSource="{Binding AvailableBlueprints}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" 
                                                BorderBrush="#E0E0E0" 
                                                BorderThickness="1" 
                                                CornerRadius="4" 
                                                Margin="4,2" 
                                                Padding="8,6" 
                                                Cursor="Hand"
                                                MouseLeftButtonDown="Blueprint_MouseLeftButtonDown">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Icon}" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="12"/>
                                                    <TextBlock Text="{Binding Type}" FontSize="10" Foreground="Gray"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </DockPanel>
            </Border>

            <!-- Vertical Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="#E0E0E0" BorderBrush="#BDBDBD" BorderThickness="1"/>

            <!-- Workspace Panel -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto" x:Name="CodeViewRow"/>
                    <RowDefinition Height="*" x:Name="CodeContentRow"/>
                </Grid.RowDefinitions>

                <!-- Workspace Panel -->
                <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Margin="2">
                    <DockPanel>
                        <TextBlock Text="Workspace" FontSize="14" FontWeight="SemiBold" Foreground="#424242" Margin="8,8,8,4" DockPanel.Dock="Top"/>
                        <Grid Margin="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Workspace Header -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Drop zone for blueprints - Right-click items to edit" 
                                           FontStyle="Italic" 
                                           Foreground="Gray" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Blueprint Items List -->
                            <ListBox Grid.Row="1"
                                     x:Name="WorkspaceListBox"
                                     ItemsSource="{Binding CurrentProject.Quests}"
                                     SelectedItem="{Binding SelectedQuest}"
                                     AllowDrop="True"
                                     Drop="QuestListBox_Drop"
                                     DragOver="QuestListBox_DragOver">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" 
                                                       Text="ðŸ“‹" 
                                                       FontSize="16" 
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                            
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Summary}" FontSize="10" Foreground="Gray"/>
                                            </StackPanel>
                                            
                                            <TextBlock Grid.Column="2" 
                                                       Text="{Binding BlueprintType}" 
                                                       FontSize="10" 
                                                       Foreground="DarkBlue" 
                                                       VerticalAlignment="Top"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                                <ListBox.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Edit Quest" Command="{Binding EditQuestCommand}">
                                            <MenuItem.Icon>
                                                <TextBlock Text="âœï¸" FontSize="14"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="Duplicate Quest" Command="{Binding DuplicateQuestCommand}">
                                            <MenuItem.Icon>
                                                <TextBlock Text="ðŸ“„" FontSize="14"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <Separator/>
                                        <MenuItem Header="Remove Quest" Command="{Binding RemoveQuestCommand}">
                                            <MenuItem.Icon>
                                                <TextBlock Text="ðŸ—‘ï¸" FontSize="14"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </ContextMenu>
                                </ListBox.ContextMenu>
                            </ListBox>
                        </Grid>
                    </DockPanel>
                </Border>

                <!-- Code View Splitter -->
                <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="#E0E0E0" BorderBrush="#BDBDBD" BorderThickness="1"/>

                <!-- Generated Code Panel -->
                <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Margin="2">
                    <DockPanel>
                        <DockPanel DockPanel.Dock="Top" Margin="8,8,8,4">
                            <TextBlock Text="Generated C# Code" FontSize="14" FontWeight="SemiBold" Foreground="#424242" DockPanel.Dock="Left"/>
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                                <Button Content="Export" Margin="4,0,0,0"/>
                                <Button Content="Copy" Margin="4,0,0,0"/>
                            </StackPanel>
                        </DockPanel>
                        <TextBox
                            x:Name="CodeEditor"
                            FontFamily="Consolas"
                            FontSize="12"
                            Text="{Binding GeneratedCode}"
                            IsReadOnly="True"
                            Margin="8,0,8,8"
                            VerticalScrollBarVisibility="Auto"
                            HorizontalScrollBarVisibility="Auto"
                            AcceptsReturn="True"
                            TextWrapping="NoWrap"/>
                    </DockPanel>
                </Border>
            </Grid>

        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <StatusBarItem>
                <TextBlock Text="Ready"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Quests: "/>
                    <TextBlock Text="{Binding CurrentProject.Quests.Count}"/>
                    <TextBlock Text=" | Selected: " Margin="8,0,0,0"/>
                    <TextBlock Text="{Binding SelectedQuest.DisplayName, FallbackValue='None'}"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>