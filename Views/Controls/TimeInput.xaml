<UserControl x:Class="Schedule1ModdingTool.Views.Controls.TimeInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:Schedule1ModdingTool.Views"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="200">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Style="{StaticResource LabelStyle}"/>
            <views:InfoIcon x:Name="InfoIcon"
                          TooltipText="24-hour time in HHMM format (e.g., 0900 for 9:00 AM, 1430 for 2:30 PM)"/>
        </StackPanel>
        <TextBox x:Name="TimeTextBox"
                 Style="{StaticResource TextBoxStyle}"
                 MaxLength="4"
                 PreviewTextInput="TimeTextBox_PreviewTextInput"
                 TextChanged="TimeTextBox_TextChanged"
                 GotFocus="TimeTextBox_GotFocus"
                 LostFocus="TimeTextBox_LostFocus"/>
    </StackPanel>
</UserControl>
