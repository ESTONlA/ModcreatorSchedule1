<UserControl x:Class="Schedule1ModdingTool.Views.Controls.ScheduleTimelineView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:models="clr-namespace:Schedule1ModdingTool.Models"
             xmlns:utils="clr-namespace:Schedule1ModdingTool.Utils"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <utils:ActionTypeToColorConverter x:Key="ActionTypeToColorConverter"/>
        <utils:HourLabelOffsetConverter x:Key="HourLabelOffsetConverter"/>
    </UserControl.Resources>
    <Border Style="{StaticResource PanelStyle}" Padding="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <DockPanel Grid.Row="0" Margin="0,0,0,12">
                <TextBlock Text="Daily Schedule Timeline" Style="{StaticResource PanelHeaderStyle}" DockPanel.Dock="Left"/>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <TextBlock Text="âš  Avoid time 0 (midnight)" 
                               Foreground="Orange"
                               FontSize="10"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"
                               ToolTip="Scheduling actions at time 0 can cause sort comparison issues. Use time 1 or later."/>
                    <Button Content="Sort by Time"
                            Click="SortByTime_Click"
                            Style="{StaticResource IconButtonStyle}"
                            Margin="0,0,8,0"/>
                    <Button Content="+ Add Action"
                            Click="AddAction_Click"
                            Style="{StaticResource IconButtonStyle}"/>
                </StackPanel>
            </DockPanel>

            <!-- Timeline -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <Canvas x:Name="TimelineCanvas" MinHeight="600" MinWidth="1440">
                    <!-- Hour markers -->
                    <Canvas.Resources>
                        <Style TargetType="Line">
                            <Setter Property="Stroke" Value="{StaticResource DarkBorderBrush}"/>
                            <Setter Property="StrokeThickness" Value="1"/>
                        </Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{StaticResource DimTextBrush}"/>
                            <Setter Property="FontSize" Value="9"/>
                            <Setter Property="FontFamily" Value="Consolas"/>
                        </Style>
                    </Canvas.Resources>

                    <!-- Hour lines and labels -->
                    <ItemsControl x:Name="HourMarkers" ItemsSource="{Binding HourLabels}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Canvas>
                                    <Line X1="{Binding X}" Y1="0" X2="{Binding X}" Y2="600" Stroke="{StaticResource DarkBorderBrush}" StrokeThickness="1"/>
                                    <TextBlock Text="{Binding Label}" Canvas.Left="{Binding X, Converter={StaticResource HourLabelOffsetConverter}}" Canvas.Top="5"/>
                                </Canvas>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Schedule actions -->
                    <ItemsControl x:Name="ScheduleActionsItemsControl" ItemsSource="{Binding ScheduleActions}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:NpcScheduleAction}">
                                <Border Background="{Binding ActionType, Converter={StaticResource ActionTypeToColorConverter}}"
                                        BorderBrush="{StaticResource DarkBorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="2"
                                        Padding="4,2"
                                        Cursor="Hand"
                                        MouseLeftButtonDown="ActionBlock_MouseLeftButtonDown"
                                        ToolTip="{Binding DisplayName}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding StartTime, StringFormat='{}{0:D4}'}" 
                                                   FontFamily="Consolas" 
                                                   FontSize="9"
                                                   FontWeight="Bold"
                                                   Margin="0,0,4,0"/>
                                        <TextBlock Text="{Binding ActionType}" 
                                                   FontSize="9"
                                                   TextTrimming="CharacterEllipsis"
                                                   MaxWidth="100"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Canvas>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>

