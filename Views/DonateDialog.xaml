<Window x:Class="Schedule1ModdingTool.Views.DonateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Support the Developers"
        Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource DarkBackgroundBrush}"
        WindowStyle="None"
        ShowInTaskbar="False"
        AllowsTransparency="True">
    <Border Background="{StaticResource DarkPanelBrush}"
            BorderBrush="{StaticResource DarkBorderBrush}"
            BorderThickness="1"
            CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect Color="Black" 
                              Direction="270" 
                              ShadowDepth="8" 
                              Opacity="0.4" 
                              BlurRadius="20" />
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <Grid Grid.Row="0" MinHeight="80" MouseDown="Window_MouseDown">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Header Background -->
                <Border Grid.Row="0" 
                        Grid.RowSpan="2"
                        Background="{StaticResource DarkBackgroundDeeperBrush}">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" 
                                          Direction="270" 
                                          ShadowDepth="2" 
                                          Opacity="0.3" 
                                          BlurRadius="4" />
                    </Border.Effect>
                </Border>

                <!-- Content Grid -->
                <Grid Grid.Row="0" Margin="0,0,0,0" MouseDown="Window_MouseDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Title Section -->
                    <StackPanel Grid.Column="0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="30,0,0,0"
                               MouseDown="Window_MouseDown">
                        <TextBlock Text="SUPPORT THE DEVELOPERS"
                                  FontSize="24"
                                  FontWeight="Bold"
                                  Margin="0,0,0,2">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="#90C56F" />
                            </TextBlock.Foreground>
                        </TextBlock>
                        <TextBlock Text="Help us continue improving Schedule 1 Mod Creator"
                                  FontSize="11"
                                  FontWeight="Regular"
                                  Foreground="{StaticResource MediumTextBrush}"
                                  Margin="0,4,0,0"
                                  Opacity="0.8" />
                    </StackPanel>

                    <!-- Close Button -->
                    <Button Grid.Column="1"
                           ToolTip="Close"
                           Click="Close_Click"
                           Style="{StaticResource IconButtonStyle}"
                           Width="36" Height="36"
                           Margin="0,16,20,0"
                           Padding="0">
                        <materialDesign:PackIcon Kind="Close"
                                                 Width="20" Height="20"
                                                 Foreground="{StaticResource MediumTextBrush}" />
                    </Button>
                </Grid>

                <!-- Bottom Border Separator -->
                <Border Grid.Row="1"
                        Height="1"
                        Background="{StaticResource DarkBorderBrush}"
                        Opacity="0.5"
                        Margin="0,0,0,0" />
            </Grid>

            <!-- Contributors Section -->
            <ScrollViewer Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto"
                         Margin="40,30">
                <ItemsControl ItemsSource="{Binding Contributors}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="2" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{StaticResource DarkBackgroundBrush}"
                                    BorderBrush="{StaticResource DarkBorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Margin="0,0,16,16"
                                    Padding="20">
                                <StackPanel>
                                    <!-- Profile Picture -->
                                    <Border Width="120" Height="120"
                                            HorizontalAlignment="Center"
                                            Background="{StaticResource DarkBackgroundDeeperBrush}"
                                            BorderBrush="{StaticResource DarkBorderBrush}"
                                            BorderThickness="0"
                                            CornerRadius="60"
                                            Margin="0,0,0,16"
                                            SnapsToDevicePixels="True">
                                        <Border.Effect>
                                            <DropShadowEffect Color="Black" 
                                                              Direction="270" 
                                                              ShadowDepth="2" 
                                                              Opacity="0.3" 
                                                              BlurRadius="4" />
                                        </Border.Effect>
                                        <Grid ClipToBounds="True">
                                            <Ellipse Stretch="UniformToFill"
                                                     HorizontalAlignment="Stretch"
                                                     VerticalAlignment="Stretch">
                                                <Ellipse.Style>
                                                    <Style TargetType="Ellipse">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ProfilePicturePath}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ProfilePicturePath}" Value="">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Ellipse.Style>
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{Binding ProfilePicturePath}"
                                                                Stretch="UniformToFill"
                                                                AlignmentX="Center"
                                                                AlignmentY="Center" />
                                                </Ellipse.Fill>
                                            </Ellipse>
                                            <Ellipse Stroke="{StaticResource DarkBorderBrush}"
                                                     StrokeThickness="2"
                                                     HorizontalAlignment="Stretch"
                                                     VerticalAlignment="Stretch"
                                                     IsHitTestVisible="False" />
                                            <!-- Placeholder icon if image not found -->
                                            <materialDesign:PackIcon Kind="Account"
                                                                     Width="60"
                                                                     Height="60"
                                                                     Foreground="{StaticResource DimTextBrush}"
                                                                     Opacity="0.5"
                                                                     HorizontalAlignment="Center"
                                                                     VerticalAlignment="Center">
                                                <materialDesign:PackIcon.Style>
                                                    <Style TargetType="materialDesign:PackIcon">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ProfilePicturePath}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ProfilePicturePath}" Value="">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </materialDesign:PackIcon.Style>
                                            </materialDesign:PackIcon>
                                        </Grid>
                                    </Border>

                                    <!-- Contributor Name -->
                                    <TextBlock Text="{Binding Name}"
                                              FontSize="18"
                                              FontWeight="SemiBold"
                                              Foreground="{StaticResource LightTextBrush}"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,16" />

                                    <!-- Donation Button -->
                                    <Button Content="Ko-fi"
                                           Click="KoFi_Click"
                                           DataContext="{Binding}"
                                           Style="{StaticResource AccentButtonStyle}"
                                           MinWidth="140"
                                           HorizontalAlignment="Stretch">
                                        <Button.ContentTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal"
                                                           HorizontalAlignment="Center">
                                                    <materialDesign:PackIcon Kind="Coffee"
                                                                             Width="16" Height="16"
                                                                             Margin="0,0,6,0"
                                                                             VerticalAlignment="Center" />
                                                    <TextBlock Text="Ko-fi" 
                                                               VerticalAlignment="Center" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </Button.ContentTemplate>
                                    </Button>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Footer -->
            <Grid Grid.Row="2" Background="{StaticResource DarkBackgroundDeeperBrush}" Height="50">
                <TextBlock Text="Thank you for your support! ❤️"
                          FontSize="11"
                          Foreground="{StaticResource DimTextBrush}"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center" />
            </Grid>
        </Grid>
    </Border>
</Window>

